<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_cell_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/separatorImg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/card_seperator"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"

            app:layout_constraintBottom_toBottomOf="@id/med_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/medName" />

        <TextView
            android:id="@+id/medName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:maxLength="35"
            android:text="@string/med_name"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/main_app_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/separatorImg"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/med_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:text="50g, Take 1 Pill(s) Before eating"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/medName"
            app:layout_constraintTop_toBottomOf="@id/medName"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>