<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AddNewMedicine.View.AddNewMedicineActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add New Med"
        android:textColor="#ffff"
        android:textSize="22dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="90dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/medication_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Name:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_name_txt">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Medication Name"
                            android:inputType="text"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/medication_form_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Form:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_name_edt"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <Spinner
                        android:id="@+id/medication_form_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border"
                        android:elevation="20dp"
                        android:contentDescription="Medication Form"
                        android:fontFamily="@font/poppins_regular"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_form_txt" />
                    <TextView
                        android:id="@+id/medication_strength_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Strength:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_form_spinner"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_strength_unit_edt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/medication_strength_unit_spinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_strength_txt">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Medication Strength"
                            android:inputType="numberDecimal"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/medication_strength_unit_spinner"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border"
                        android:elevation="20dp"
                        android:contentDescription="Medication Strength"
                        android:fontFamily="@font/poppins_regular"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintTop_toBottomOf="@id/medication_strength_txt" />
                    <TextView
                        android:id="@+id/medication_reason_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason of taking this med:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_strength_unit_edt"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_reason_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_reason_txt">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Reason of taking this med"
                            android:inputType="text"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/medication_instruction_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Instructions:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_reason_edt"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_instruction_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_instruction_txt">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Medication Instructions"
                            android:inputType="text"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/medication_Reoccurrence_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Reoccurrence Per Day:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_instruction_edt"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <Spinner
                        android:id="@+id/medication_Reoccurrence_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border"
                        android:elevation="20dp"
                        android:contentDescription="Medication Reoccurrence"
                        android:fontFamily="@font/poppins_regular"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_Reoccurrence_txt" />
                    <TextView
                        android:id="@+id/medication_Reoccurrence_interval_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication Reoccurrence Interval:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_Reoccurrence_spinner"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <Spinner
                        android:id="@+id/medication_Reoccurrence_interval_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border"
                        android:elevation="20dp"
                        android:contentDescription="Medication Reoccurrence"
                        android:fontFamily="@font/poppins_regular"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_Reoccurrence_interval_txt" />
                    <TextView
                        android:id="@+id/medication_treatment_Duration_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treatment Duration:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_Reoccurrence_interval_spinner"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_treatment_Duration_from_edt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        android:background="@drawable/border"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_treatment_Duration_txt">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="From"
                            android:focusable="false"
                            android:enabled="true"
                            android:inputType="text"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_treatment_Duration_to_edt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintTop_toBottomOf="@id/medication_treatment_Duration_txt">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:focusable="false"
                            android:enabled="true"
                            android:hint="To"
                            android:inputType="text"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"
                        />
                    <TextView
                        android:id="@+id/medication_left_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Meds Left:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_treatment_Duration_from_edt"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_left_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_left_txt">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Number of Meds Left"
                            android:inputType="numberDecimal"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/medication_refill_reminder_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treatment Duration:"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/medication_left_edt"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_refill_reminder_num_of_items_edt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="20dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeColor="#FFF"
                        app:boxBackgroundColor="#FFF"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        android:background="@drawable/border"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_refill_reminder_txt">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="No. items"
                            android:inputType="numberDecimal"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/medication_refill_reminder_time_edt"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:boxBackgroundMode="none"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="20dp"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        android:background="@drawable/border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/medication_refill_reminder_txt">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:fontFamily="@font/poppins_regular"
                            android:focusable="false"
                            android:enabled="true"
                            android:hint="Ex: 10:00 AM"
                            android:inputType="text"
                            android:textColor="#000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Add"
                        android:textColor="#ffff"
                        android:backgroundTint="#078E98"
                        android:layout_marginTop="36dp"
                        android:textSize="16dp"
                        android:layout_marginBottom="36dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/medication_refill_reminder_num_of_items_edt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        ></Button>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>