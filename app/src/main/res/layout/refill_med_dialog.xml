<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:padding="16dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:elevation="15dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/dialogCloseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_btn"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refill Medication"
                android:fontFamily="@font/poppins_bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/emailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Refill Amount:"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_margin="24dp"
                app:layout_constraintTop_toBottomOf="@id/dialogTitle"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/refillEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:elevation="4dp"

                app:boxBackgroundColor="#FFF"
                app:boxStrokeColor="#FFF"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/border"
                android:fontFamily="@font/poppins_regular"
                android:hint="Refill Amount"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@id/emailTitle"
                app:layout_constraintTop_toBottomOf="@id/emailTitle"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginRight="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/refillEdit"
                >

                <Button
                    android:id="@+id/refillBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Refill"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_margin="11dp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/main_app_color"
                    app:strokeWidth="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <Button
                    android:id="@+id/cancelMedBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Cancel"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/main_app_color"
                    android:layout_margin="11dp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/main_app_color"
                    app:strokeWidth="1dp"
                    app:layout_constraintEnd_toStartOf="@id/refillBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>